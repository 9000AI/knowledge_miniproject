/* 添加新的样式 */
.section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 6rpx 5rpx 2rpx;
    margin: 60rpx 28rpx 20rpx;
}

.section-title {
    font-size: 32rpx;
    font-weight: bold;
    color: #000000;
    border-left: 8rpx solid #c5eb59;
    padding-left: 18rpx;
}

.more-link {
    display: flex;
    align-items: center;
    color: #999999;
    font-size: 28rpx;
}

.right-icon {
    width: 32rpx;
    height: 32rpx;
    margin-left: 4rpx;
}

/* 更新列表容器 */
.update-list {
    padding: 0 28rpx;
}

/* 更新项样式 */
.update-item {
    background: #FFFFFF;
    border-radius: 12rpx;
    padding: 10rpx;
    margin-bottom: 8rpx;
    display: flex;
    align-items: flex-start;
    gap: 12rpx;
}

/* 图片样式 */
.item-image {
    width: 200rpx;
    height: 120rpx;
    border-radius: 8rpx;
    object-fit: cover;
}

/* 内容容器 */
.item-content {
    flex: 1;
    min-width: 0;
    margin-left: 5rpx;
    height: 120rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

/* 项目头部样式 */
.item-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 12rpx;
}

/* 标题样式 */
.item-title {
    font-size: 30rpx;
    font-weight: bold;
    color: #333333;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    line-height: 1.3;
    max-height: 78rpx;
}

/* 底部容器 */
.item-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 8rpx;
}

/* 标签容器 */
.tags-container {
    display: flex;
    gap: 8rpx;
    flex: 1;
}

/* 标签样式 */
.tag {
    font-size: 22rpx;
    color: #666666;
    background: #f5f5f5;
    padding: 4rpx 12rpx;
    border-radius: 8rpx;
    margin-right: 8rpx;
}

/* 时间样式 */
.item-time {
    font-size: 24rpx;
    color: #999999;
    flex-shrink: 0;
}

/* 描述样式 */
.item-desc {
    font-size: 26rpx;
    color: #666666;
    line-height: 1.5;
}

/* VIP图标样式 */
.vip-icon {
    width: 32rpx;
    height: 32rpx;
    position: absolute;
    right: 16rpx;
    top: 16rpx;
}
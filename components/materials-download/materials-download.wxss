.section-title {
    font-size: 32rpx;
    font-weight: bold;
    color: #000000;
    padding: 6rpx 18rpx 2rpx;
    margin: 60rpx 0 20rpx 28rpx;
    border-left: 8rpx solid #c5eb59;
    /* 左边框，使用指定的颜色 */
    text-align: left;

}

/* 更新列表容器 */
.update-list {
    padding: 0 28rpx;
}

/* 更新项样式 */
.update-item {
    background: #FFFFFF;
    border-radius: 12rpx;
    padding: 10rpx;
    margin-bottom: 8rpx;
    display: flex;
    align-items: flex-start;
    gap: 12rpx;
}

/* 图片样式 */
.item-image {
    width: 160rpx;
    height: 100rpx;
    border-radius: 8rpx;
    flex-shrink: 0;
}

/* 内容容器 */
.item-content {
    flex: 1;
    min-width: 0;
    margin-left: 5rpx;
}

/* 项目头部样式 */
.item-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 12rpx;
}

/* 标题样式 */
.item-title {
    font-size: 30rpx;
    font-weight: bold;
    color: #333333;
    margin-bottom: 4rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}

/* 底部容器 */
.item-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

/* 标签容器 */
.tags-container {
    display: flex;
    gap: 8rpx;
    flex: 1;
}

/* 标签样式 */
.tag {
    font-size: 22rpx;
    color: #666666;
    background: #f5f5f5;
    padding: 2rpx 8rpx;
    border-radius: 8rpx;
}

/* 时间样式 */
.item-time {
    font-size: 24rpx;
    color: #999999;
    margin-left: 16rpx;
}

/* 描述样式 */
.item-desc {
    font-size: 26rpx;
    color: #666666;
    line-height: 1.5;
}
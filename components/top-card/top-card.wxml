<view class="top-card-grid">
  <block wx:for="{{cardList}}" wx:key="index">
    <view class="top-card" bindtap="handleCardClick" data-index="{{index}}">
      <image 
        class="card-image" 
        src="{{item.image}}" 
        mode="aspectFill"
      />
      <view class="play-circle">
        <image 
          class="play-icon" 
          src="https://miniknowledge.9000aigc.com/assets/images/播放 (1).png" 
          mode="aspectFit"
        />
      </view>
      <view class="card-title" wx:if="{{item.title}}">{{item.title}}</view>
    </view>
  </block>
</view>

<view class="top-card-grid">
  <block wx:for="{{cardList}}" wx:key="index">
    <view class="top-card" bindtap="handleCardClick" data-index="{{index}}">
      <image 
        class="card-image" 
        src="{{item.image}}" 
        mode="aspectFill"
      />
     
      <view class="card-title" wx:if="{{item.title}}">{{item.title}}</view>
    </view>
  </block>
</view>

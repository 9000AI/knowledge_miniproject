.test-card {
  padding: 20rpx;
}

.test-btn {
  background-color: #07c160;
  color: #fff;
  margin: 20rpx 0;
}

/* 场景卡片网格容器 */
.category-container {
  padding: 0 20rpx;
}

/* 添加标题样式 */
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #000000;
  padding: 6rpx 18rpx 2rpx;
  margin: 30rpx 0 20rpx 28rpx;
  border-left: 8rpx solid #c5eb59;
  text-align: left;
}

/* 分类列表容器 */
.category-list {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
}

/* 分类项样式 */
.category-item {
  position: relative;
  width: 100%;
  aspect-ratio: 2/1;
  border-radius: 16rpx;
  overflow: hidden;
  background: linear-gradient(
    135deg,
    rgb(233, 255, 83), 
    rgb(195, 240, 117), 
    rgb(148, 224, 153)
  );
}

.category-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
}

.category-info {
  font-size: 24rpx;
  color: #666;
  margin-top: 10rpx;
  display: block;
}

/* 卡片内容布局 */
.card-content {
  position: absolute;
  top: 5rpx;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 5rpx 0rpx 5rpx 10rpx;
  box-sizing: border-box;
  z-index: 1;
  overflow: hidden;
}

/* 左侧文字区域 */
.card-left {
  display: flex;
  flex-direction: column;
  justify-content: center;
  height: 100%;
  flex: 0.6;
}

/* 文字包装器 */
.card-text-wrapper {
  display: flex;
  flex-direction: column;
  gap: 2rpx;
  margin-left: 16rpx;
  margin-top: -10rpx;
}

/* 主标题文字 */
.card-text {
  font-size: 28rpx;
  font-weight: bold;
  color: #000000;
  line-height: 1;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 描述文字 */
.card-desc {
  font-size: 18rpx;
  color: #666666;
  white-space: nowrap;
  font-weight: normal;
  line-height: 1;
  margin-top: 6rpx;
}

/* 卡片图片 */
.card-image {
  position: static;
  width: 420rpx;
  height: 420rpx;
  object-fit: contain;
  margin-left: -30rpx;
  transform: scale(0.8);
  margin-right: -40rpx;
  margin-bottom: -20rpx;
  opacity: 0.7;
}

/* 场景卡片样式调整 */
.scene-card {
    width: 100%;
    position: relative;
    padding-top: 120rpx;
    border-radius: 16rpx;
    overflow: hidden;
    background: #f5f5f5;
    box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

/* 背景图片样式 */
.scene-card>image {
    /* 选择直接子元素中的 image */
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 0;
    /* 确保背景图片在内容之下 */
}

/* 调整卡片内容容器，确保有足够空间 */
.card-content {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    padding: 5rpx 0rpx 5rpx 10rpx;
    box-sizing: border-box;
    z-index: 1;
}

/* 左侧文字和按钮区域 */
.card-left {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 100%;
    flex: 0.8;
}

/* 卡片文字样式 */
.card-text {
    position: static;
    /* 移除绝对定位 */
    font-size: 24rpx;
    font-weight: bold;
    color: #000000 !important;
    white-space: nowrap;
    margin-top: 10rpx;
    margin-left: 12rpx;
    /* 保持原来的上边距 */
}

/* 添加按钮样式 */
.card-button {
    position: static;
    /* 移除绝对定位 */
    width: 90rpx;
    height: 38rpx;
    line-height: 38rpx;
    background: #363636;
    color: #ffffff;
    font-size: 17rpx;
    text-align: center;
    border-radius: 28rpx;
    margin-bottom: 20rpx;
    /* 保持原来的下边距 */
}

/* 调整卡片图片样式 */
.card-image {
    position: static;
    width: 200rpx;
    height: 200rpx;
    object-fit: contain;
    margin-left: 10rpx;
    transform: scale(0.7);
    margin-right: -30rpx;
    margin-bottom: -10rpx;
}

/* 移除之前的文字颜色覆盖 */
.card-gradient-1 .card-text {
    color: #000000 !important;
}

.scene-card:not(.card-gradient-1) .card-text {
    color: #000000 !important;
    text-shadow: none;
    /* 移除文字阴影 */
}
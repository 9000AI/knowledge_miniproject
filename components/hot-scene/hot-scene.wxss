/* 添加热门场景标题样式 */
.section-title {
    font-size: 32rpx;
    font-weight: bold;
    color: #000000;
    padding: 6rpx 18rpx 2rpx;
    margin: 10rpx 0 20rpx 28rpx;
    border-left: 8rpx solid #c5eb59;
    /* 左边框，使用指定的颜色 */
    text-align: left;
}

/* 场景卡片网格容器 */
.scene-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    /* 一行三个卡片 */
    gap: 20rpx;
    /* 卡片之间的间距 */
    padding: 0 20rpx;
    /* 左右边距 */
    box-sizing: border-box;
}


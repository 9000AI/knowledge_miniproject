.prime-course {
  padding: 10rpx 20rpx;
  width: 100%;
  box-sizing: border-box;  /* 确保padding不会导致超出容器 */
}

/* 标题样式 */
.section-title {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.title-bar {
  width: 8rpx;
  height: 32rpx;
  background: #c5eb59;
  margin-right: 16rpx;
  border-radius: 4rpx;
}

.section-title text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

/* 课程卡片网格 */
.course-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  width: 100%;
}

.course-card {
  width: 100%;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
  position: relative;  /* 添加相对定位 */
}

.course-card image {
  width: 100%;
  height: 200rpx;
  display: block;
}

/* 会员标签样式 */
.vip-tag {
  position: absolute;
  top: 12rpx;          
  left: 12rpx;         /* 改成 left 而不是 right */
  background-color: rgba(0, 0, 0, 0.6);
  color: #c5eb59;
  padding: 4rpx 12rpx;
  border-radius: 16rpx;
  font-size: 20rpx;
}
.vip-tags {
  position: absolute;
  top: 12rpx;          
  left: 12rpx;         /* 改成 left 而不是 right */
  background-color: rgba(197, 218, 85, 0.4);
  color: #eeeeee;
  padding: 4rpx 12rpx;
  border-radius: 16rpx;
  font-size: 20rpx;
}

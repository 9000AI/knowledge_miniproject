.html-wrapper {
    margin: 10px 0;
    font-size: 28rpx;
    line-height: 1.8;
    color: #333;
    text-align: left;
    width: 100%;
}

/* 标题样式 */
.wemark-h1,
.wemark-h2,
.wemark-h3 {
    font-weight: bold;
    margin: 30rpx 0;
    text-align: left;
}

.wemark-h1 {
    font-size: 40rpx;
}

.wemark-h2 {
    font-size: 36rpx;
}

.wemark-h3 {
    font-size: 32rpx;
}

/* 列表样式 */
.wemark-ul {
    margin: 20rpx 0;
    padding-left: 40rpx;
}

.wemark-li {
    margin: 10rpx 0;
}

/* 链接样式 */
.wemark-link {
    color: #576b95;
    text-decoration: none;
}

/* 段落样式 */
.wemark-p {
    margin: 15rpx 0;
}

/* 图片容器样式 */
.wemark-image-wrapper {
    margin: 20rpx 0;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
}

/* 图片样式 */
.wemark-img {
    max-width: 100% !important;
    /* 确保图片不会超出容器 */
    width: 100% !important;
    /* 图片宽度占满容器 */
    height: auto !important;
    /* 高度自适应保持比例 */
    border-radius: 8rpx;
    /* 圆角效果 */
    vertical-align: middle;
    /* 防止图片底部间隙 */
    object-fit: cover;
    /* 保持图片比例裁剪 */
}

/* 图片说明文字样式 */
.wemark-image-caption {
    font-size: 24rpx;
    color: #666;
    margin-top: 12rpx;
    text-align: center;
    width: 100%;
    padding: 0 20rpx;
    box-sizing: border-box;
}

/* 引用块样式 */
.wemark-blockquote {
    margin: 20rpx 0;
    padding: 20rpx;
    background: #f5f5f5;
    border-left: 4rpx solid #c5eb59;
}

/* 适配深色模式 */
@media (prefers-color-scheme: dark) {
    .html-wrapper {
        color: #e5e5e5;
    }

    .wemark-blockquote {
        background: #2a2a2a;
    }

    .wemark-image-caption {
        color: #999;
    }

    .wemark-img {
        opacity: 0.9;
        /* 深色模式下稍微降低图片亮度 */
    }
}
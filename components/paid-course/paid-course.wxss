.paid-course {
  padding: 10rpx 20rpx;
  width: 100%;
  box-sizing: border-box;
}

/* 标题样式 */
.section-title {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.title-bar {
  width: 8rpx;
  height: 32rpx;
  background: #c5eb59;
  margin-right: 16rpx;
  border-radius: 4rpx;
}

.section-title text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

/* 课程卡片网格 */
.course-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  width: 100%;
}

.course-card {
  position: relative;
  width: 100%;
  border-radius: 12rpx;
  overflow: hidden;
  background-color: #fff;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.course-card .course-image {
  width: 100%;
  height: 200rpx;
  display: block;
  border-radius: 12rpx 12rpx 0 0;
}

/* 课程信息遮罩 */
.course-info {
  padding: 16rpx;
  background-color: #fff;
}

.course-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #333;
}

/* 课程元信息区域 - 价格和讲师 */
.course-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}

.course-price {
  display: flex;
  align-items: baseline;
  font-size: 26rpx;
  color: #ff5733;
}

.price-tag {
  font-size: 22rpx;
  margin-right: 2rpx;
}

.price-value {
  font-size: 32rpx;
  font-weight: bold;
}

.original-price {
  font-size: 22rpx;
  color: #999;
  text-decoration: line-through;
  margin-left: 10rpx;
}

.member-free {
  font-size: 22rpx;
  color: #fff;
  background: #c5eb59;
  padding: 4rpx 10rpx;
  border-radius: 20rpx;
  margin-left: 10rpx;
}

.course-teacher {
  font-size: 22rpx;
  color: #999;
  margin-left: 10rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  flex: 1; /* 让讲师信息占据剩余空间 */
  text-align: right; /* 文本右对齐 */
  padding-left: 10rpx; /* 与价格保持一定距离 */
}

/* 加载状态样式 */
.loading-status {
  text-align: center;
  padding: 20rpx;
  color: #999;
  font-size: 24rpx;
}

.loading {
  display: flex;
  align-items: center;
  justify-content: center;
}

.no-more {
  color: #999;
} 
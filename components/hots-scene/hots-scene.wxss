/* 导入字体 */
@font-face {
    font-family: 'HuXiaoBo';
    src: url('https://miniknowledge.9000aigc.com/assets/fonts/HuXiaoBoNanShenTi-2.otf');
    font-weight: normal;
    font-style: normal;
}

@font-face {
    font-family: 'Angora';
    src: url('https://miniknowledge.9000aigc.com/assets/fonts/Angora.otf');
    font-weight: normal;
    font-style: normal;
}

/* 标题样式 */
.section-title {
    font-size: 32rpx;
    font-weight: bold;
    color: #000000;
    padding: 6rpx 18rpx 2rpx;
    margin: 28rpx 0 20rpx 28rpx;
    border-left: 8rpx solid #c5eb59;
    text-align: left;
}

/* 行业联营标题特殊样式 */
.section-title-industry {
    margin-top: 40rpx;
    border-left: 8rpx solid #c5eb59;
}

/* 场景卡片网格容器 */
.scene-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20rpx;
    padding: 0 20rpx;
    box-sizing: border-box;
    margin-bottom: 30rpx;
}

/* 场景卡片样式 */
.scene-card {
    position: relative;
    width: 100%;
    aspect-ratio: 2/1;
    border-radius: 16rpx;
    overflow: hidden;
    transition: transform 0.3s ease;
}

/* 行业联营卡片样式 - 添加阴影 */
.industry-card {

    background: #e4e4e4;
}

.scene-card:active {
    transform: scale(0.97);
}

/* 行业卡片点击效果 */
.industry-card:active {
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
    transform: scale(0.97) translateY(2rpx);
}

/* 卡片内容容器 */
.card-content {
    position: relative;
    width: 100%;
    height: 100%;
    padding: 20rpx;
    box-sizing: border-box;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 2;
    letter-spacing: 1px;
}

/* 文本容器 - 用于垂直排列中英文 */
.text-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

/* 卡片文字 */
.card-text {
    font-size: 40rpx;
    font-weight: 800;
    font-family: 'HuXiaoBo', sans-serif;
    color: #333333;
    text-align: center;
    line-height: 1.2;
}

/* 行业联营卡片文字颜色和样式 */
.industry-card .card-text {
    color: #333333;
    font-weight: 600;
    text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.05);
}

/* 卡片副文字（英文） */
.card-subtext {
    font-size: 12rpx;
    font-weight: 500;
    color: #666666;
    text-align: center;
    margin-top: 6rpx;
    font-family: 'Angora', sans-serif;
}

/* 行业联营卡片副文字颜色统一 */
.industry-card .card-subtext {
    color: #999999;
}

/* 深色背景文字样式 */
.white-text {
    color: #ffffff;
}

.white-subtext {
    color: rgba(255, 255, 255, 0.8);
}

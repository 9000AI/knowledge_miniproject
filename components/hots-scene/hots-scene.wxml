<view class="section-title">热门场景</view>
<view class="scene-grid">
  <block wx:for="{{sceneList}}" wx:key="index">
    <view class="scene-card" bindtap="handleCardClick" data-scene="{{item}}">
      <image class="card-bg" src="https://mini.9000aigc.com/assets/cards/bg.png" mode="aspectFill"></image>
      <view class="card-content">
        <text class="card-text">{{item}}</text>
      </view>
    </view>
  </block>
</view>

<view class="container">
  <!-- 自定义导航栏 -->
  <view class="custom-nav">
    <view class="nav-content">
      <view class="back-btn" bindtap="goBack">
        <image 
          class="back-icon" 
          src="https://miniknowledge.9000aigc.com/assets/icons/back (1).png" 
          mode="aspectFit"
        />
      </view>
      <view class="nav-title">{{pageTitle}}</view>
    </view>
  </view>

  <!-- 主要内容区域 -->
  <view class="content">
    <!-- 标题区域 -->
    <view class="title-section">
      <view class="main-title">联系客服</view>
      <view class="sub-title">扫描下方二维码添加客服微信</view>
    </view>

    <!-- 二维码展示区域 -->
    <view class="qrcode-section">
      <view class="qrcode-container">
        <image 
          class="qrcode-image" 
          src="{{qrcodeUrl}}" 
          mode="aspectFit"
          show-menu-by-longpress="true"
        />
      </view>
      
      <!-- 提示文字 -->
      <view class="tips-text">
        <text class="tip-line">长按识别二维码添加客服微信</text>
      </view>
    </view>

    <!-- 服务说明 -->
    <view class="service-section">
      <view class="service-title">我们的服务</view>
      <view class="service-list">
        <view class="service-item">
          <view class="service-dot"></view>
          <text>专业课程咨询</text>
        </view>
        <view class="service-item">
          <view class="service-dot"></view>
          <text>学习问题解答</text>
        </view>
        <view class="service-item">
          <view class="service-dot"></view>
          <text>会员服务支持</text>
        </view>
        <view class="service-item">
          <view class="service-dot"></view>
          <text>技术问题处理</text>
        </view>
      </view>
    </view>
  </view>
</view>
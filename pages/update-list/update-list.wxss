.container {
  padding: 0;
  background: #fff;
  padding-top: calc(env(safe-area-inset-top) + 88rpx + 100rpx);
}

.update-list-container {
  min-height: 100vh;
  background: #f5f5f5;
  box-sizing: border-box;
}

/* 自定义导航栏 */
.custom-nav {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  background: #fff;
  z-index: 100;
  /* 移除固定高度，使用js动态计算 */
}

.nav-content {
  position: relative;
  height: 44px; /* 导航栏固定高度 */
  display: flex;
  align-items: center;
  padding: 0 24rpx;
}

.back-icon {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 16rpx; /* 增加点击区域 */
}

.back-icon image {
  width: 36rpx;
  height: 36rpx;
}

.nav-title {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  font-size: 34rpx;
  font-weight: 500;
  color: #333;
}

/* 内容区域 */
.content {
  /* 移除固定padding-top，使用js动态计算 */
  box-sizing: border-box;
  margin-top: -25rpx;
} 
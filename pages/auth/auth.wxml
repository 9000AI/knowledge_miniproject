<view class="auth-container">
  <!-- 顶部图片区域 -->
  <view class="top-image">
    <image src="https://mini.9000aigc.com/assets/images/R.png" mode="aspectFill"></image>
  </view>

  <view class="auth-content">
    <view class="title">欢迎使用科技流量第一站</view>
    
    <button class="auth-btn" bindtap="handleWxLogin">
      一键登录
    </button>

    <!-- 注册入口 -->
    <view class="register-entry">
      <text>还没有账号？</text>
      <text class="link" bindtap="goToRegister">去注册</text>
    </view>

    <view class="agreement">
      <checkbox-group bindchange="handleAgreeChange">
        <checkbox value="agree" checked="{{isAgree}}" />
      </checkbox-group>
      <view class="agreement-text">
        我已阅读并同意<text class="link" bindtap="showAgreement">《用户协议》</text>
      </view>
    </view>
  </view>
</view> 
.auth-container {
  height: 100vh;
  position: relative;
  background: #ffffff;
}

.top-image {
  height: 100vh;
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
}

.top-image image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 文字容器样式 */
.text-container {
  position: absolute;
  top: 74%;
  left: 50%;
  transform: translate(-50%, -74%);
  text-align: center;
  z-index: 1;
}

/* 主标题样式 */
.top-text {
  color: #000000;
  font-size: 56rpx;
  font-family: 'XinYi', sans-serif;
  font-weight: bold;
  white-space: nowrap;
  letter-spacing: 2px;
  margin-bottom: 16rpx;
}

/* 副标题样式 */
.sub-text {
  color: #333333;
  font-size: 28rpx;
  white-space: nowrap;
  letter-spacing: 1px;
  margin-bottom: 20rpx;
}

.auth-content {
  width: 100%;
  height: 100vh;
  padding: 0 40rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  z-index: 2;
  padding-top: 25vh;  /* 从顶部开始留25%的空间 */
  background: linear-gradient(to bottom, rgba(255,255,255,0) 0%, rgba(255,255,255,0.9) 20%, rgba(255,255,255,1) 40%);
}

.logo {
  margin-top: 60rpx;
  width: 160rpx;
  height: 160rpx;
}

.logo image {
  width: 100%;
  height: 100%;
}

.title {
  font-size: 48rpx;
  letter-spacing: 1.5px;
  margin-bottom: 20rpx;
  color: #333;
  font-family: 'HuXiaoBo', sans-serif;
}

.auth-btn {
  width: 80% !important;
  height: 88rpx;
  line-height: 54rpx;
  background: #101010;
  color: #c1e246;
  font-size: 32rpx;
  border-radius: 18rpx;
  margin-bottom: 40rpx;
}

.agreement {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 5rpx;
}

.agreement checkbox {
  transform: scale(0.7);
}

.agreement-text {
  font-size: 26rpx;
  color: #666;
}

.link {
  color:rgb(23, 23, 23);
}

.welcome-text {
  font-size: 36rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.register-entry {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 15rpx;
  font-size: 28rpx;
  color: #666;
}

.register-entry .link {
  color:rgb(23, 23, 23);
  margin-left: 8rpx;
}

/* 添加获取 code 按钮样式 */
.code-btn {
  width: 80% !important;
  height: 88rpx;
  line-height: 88rpx;
  background: #f5f5f5;
  color: #333333;
  font-size: 32rpx;
  border-radius: 44rpx;
  margin-bottom: 20rpx;
  border: 2rpx solid #dddddd;
}

/* 添加字体声明 */
@font-face {
  font-family: 'XinYi';
  src: url('https://mini.9000aigc.com/assets/fonts/xinyi.ttf');
} 

@font-face {
    font-family: 'HuXiaoBo';
    src: url('https://miniknowledge.9000aigc.com/assets/fonts/HuXiaoBoNanShenTi-2.otf');
    font-weight: normal;
    font-style: normal;
}
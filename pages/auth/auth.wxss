.auth-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #ffffff;
  padding: 0 40rpx;
}

.logo {
  margin-top: 120rpx;
  width: 200rpx;
  height: 200rpx;
}

.logo image {
  width: 100%;
  height: 100%;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  margin: 60rpx 0;
}

.auth-content {
  width: 100%;
}

.auth-btn {
  width: 100% !important;
  height: 88rpx;
  line-height: 60rpx;
  background: #07c160;
  color: #ffffff;
  font-size: 32rpx;
  border-radius: 44rpx;
  margin-bottom: 40rpx;
}

.agreement {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 5rpx;
}

.agreement checkbox {
  transform: scale(0.7);
}

.agreement-text {
  font-size: 26rpx;
  color: #666;
}

.link {
  color: #07c160;
}

.welcome-text {
  font-size: 36rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.sub-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 60rpx;
}

.register-entry {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 15rpx;
  font-size: 28rpx;
  color: #666;
}

.register-entry .link {
  color: #07c160;
  margin-left: 10rpx;
}

/* 添加获取 code 按钮样式 */
.code-btn {
  width: 80% !important;
  height: 88rpx;
  line-height: 88rpx;
  background: #f5f5f5;
  color: #333333;
  font-size: 32rpx;
  border-radius: 44rpx;
  margin-bottom: 20rpx;
  border: 2rpx solid #dddddd;
} 
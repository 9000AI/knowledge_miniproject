<!--pages/my-course/my-course.wxml-->
<view class="container">
  <!-- 自定义导航栏 -->
  <view class="custom-nav">
    <view class="nav-content">
      <view class="nav-title">我的课程</view>
    </view>
  </view>

  <!-- 课程列表 -->
  <view class="content-container">
    <view class="course-list">
      <block wx:if="{{courses.length > 0}}">
        <view class="course-item" wx:for="{{courses}}" wx:key="id" bindtap="goToCourseDetail" data-id="{{item.id}}">
          <!-- 课程封面 -->
          <image class="course-cover" src="{{item.coverImage}}" mode="aspectFill"></image>
          
          <!-- 课程信息 -->
          <view class="course-info">
            <text class="course-title">{{item.title}}</text>
            <text class="course-desc">{{item.description}}</text>
            <text class="teacher-info">{{item.teacherInfo}}</text>
          </view>
        </view>
      </block>
      
      <!-- 空状态 -->
      <view class="empty-state" wx:if="{{!loading && courses.length === 0}}">
        <image class="empty-icon" src="https://miniknowledge.9000aigc.com/assets/icons/empty.png" mode="aspectFit"></image>
        <text class="empty-text">暂无课程</text>
      </view>
      
      <!-- 加载状态 -->
      <view class="loading-state" wx:if="{{loading}}">
        <text>加载中...</text>
      </view>
      
      <!-- 加载完成提示 -->
      <view class="load-all" wx:if="{{!hasMore && courses.length > 0}}">
        <text>已经到底啦</text>
      </view>
    </view>
  </view>
</view> 
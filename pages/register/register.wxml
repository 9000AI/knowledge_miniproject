<view class="register-container">
  <view class="register-content">
    <view class="login-section">
      <!-- 头像和昵称区域 -->
      <view class="profile-section">
        <button class="avatar-wrapper" 
                open-type="chooseAvatar" 
                bind:chooseavatar="onChooseAvatar">
          <image class="avatar" src="{{avatarUrl || '../../images/icons/avatar.png'}}"></image>
        </button>
        <input type="nickname" 
               class="nickname-input" 
               placeholder="请输入昵称" 
               value="{{nickName}}"
               bindchange="onInputNickname"/>
      </view>
      
      <!-- 手机号注册按钮 -->
      <button class="phone-btn" 
              open-type="getPhoneNumber" 
              bindgetphonenumber="getPhoneNumber">
        手机号快速注册
      </button>

      <!-- 用户协议 -->
      <view class="agreement">
        <checkbox-group bindchange="handleAgreeChange">
          <checkbox value="agree" checked="{{isAgree}}" />
        </checkbox-group>
        <view class="agreement-text">
          注册登录即代表您已阅读并同意
          <text class="link" bindtap="showUserAgreement">《用户协议》</text>
          <text class="link" bindtap="showPrivacyAgreement">《隐私协议》</text>
        </view>
      </view>
    </view>
  </view>
</view> 
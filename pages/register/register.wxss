.register-container {
  height: 100vh;
  display: flex;
  align-items: center;
  background: #ffffff;
}

.register-content {
  width: 100%;
  padding: 0 40rpx;
  text-align: center;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 120rpx;
  display: flex;
  flex-direction: column;
}

.title::after {
  content: "第一站";
  font-size: 48rpx;
  font-weight: bold;
  margin-top: 10rpx;
}

.login-section {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.welcome-text {
  font-size: 36rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.sub-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 60rpx;
}

.phone-btn {
  width: 80% !important;
  height: 88rpx;
  line-height: 60rpx;
  background: #07c160;
  color: #ffffff;
  font-size: 32rpx;
  border-radius: 44rpx;
  margin-bottom: 40rpx;
}

.agreement {
  display: flex;
  align-items: flex-start;
  padding: 0 40rpx;
}

.agreement checkbox {
  transform: scale(0.7);
  margin-top: 4rpx;
}

.agreement-text {
  font-size: 26rpx;
  color: #666;
  margin-left: 4rpx;
  text-align: left;
}

.link {
  color: #07c160;
}

.profile-section {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
}

.avatar-wrapper {
  width: 160rpx !important;
  height: 160rpx;
  padding: 0;
  background: none;
  border: none;
  margin-bottom: 20rpx;
}

.avatar-wrapper::after {
  border: none;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background-color: #f5f5f5;
}

.nickname-input {
  width: 80%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: #f5f5f5;
  border-radius: 44rpx;
  margin-bottom: 20rpx;
  font-size: 32rpx;
} 
/* pages/video/video.wxss */
.container {
  width: 100%;
  min-height: 100vh;
  background: #f8f8f8;
  padding: 0;
  margin: 0;
  overflow: hidden;
  display: block;
}

/* 自定义导航栏 */
.custom-nav {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  background: #fff;
  z-index: 101;
  padding-top: 40px; /* 状态栏高度 */
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.nav-content {
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.back-icon-nav {
  position: absolute;
  left: 30rpx;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #333;
  border-radius: 50%;
  font-size: 30rpx;
}

.nav-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  max-width: 60%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 视频播放区域 */
.video-container {
  position: relative;
  width: 100%;
  height: 422rpx; /* 16:9比例 */
  background: #000;
  margin-top: 84px; /* 导航栏高度 + 状态栏高度 */
}

.video-player {
  width: 100%;
  height: 100%;
}

.image-player {
  width: 100%;
  height: 100%;
  background: #000;
}

/* 加载状态 */
.loading-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.5);
  display: flex;
  align-items: center;
  justify-content: center;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid rgba(255,255,255,0.3);
  border-top: 6rpx solid #fff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 课时信息 */
.lesson-info {
  padding: 30rpx 20rpx;
  background: #fff;
}

.lesson-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.lesson-teacher {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.lesson-description {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  padding: 10rpx 0;
}

/* 相关推荐 */
.related-lessons {
  margin-top: 20rpx;
  padding: 30rpx 20rpx;
  background: #fff;
}

.section-title {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.title-bar {
  width: 8rpx;
  height: 32rpx;
  background: #c5eb59;
  margin-right: 16rpx;
  border-radius: 4rpx;
}

.section-title text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.chapter-scroll {
  width: 100%;
  white-space: nowrap;
}

.chapter-list {
  display: inline-flex;
  padding: 10rpx 0;
}

.chapter-item {
  width: 240rpx;
  margin-right: 20rpx;
  display: inline-block;
}

.chapter-cover-container {
  position: relative;
  width: 100%;
  height: 135rpx;
  border-radius: 8rpx;
  overflow: hidden;
  margin-bottom: 10rpx;
}

.chapter-cover {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 8rpx;
}

.chapter-duration {
  position: absolute;
  right: 10rpx;
  bottom: 10rpx;
  font-size: 20rpx;
  color: #fff;
  background: rgba(0,0,0,0.5);
  padding: 4rpx 8rpx;
  border-radius: 4rpx;
}

.chapter-title {
  font-size: 22rpx;
  white-space: normal;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
  max-height: 76rpx;
  line-height: 1.3;
  color: #333;
}

/* 倍速控制样式 */
.rate-control {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  z-index: 100;
}

.rate-btn {
  background: rgba(0, 0, 0, 0.6);
  color: #fff;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
}

.rate-list {
  position: absolute;
  top: 70rpx;
  right: 0;
  background: rgba(0, 0, 0, 0.8);
  border-radius: 10rpx;
  padding: 10rpx 0;
  transform: translateY(-10rpx);
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.rate-list.show {
  transform: translateY(0);
  opacity: 1;
  visibility: visible;
}

.rate-item {
  color: #fff;
  padding: 16rpx 40rpx;
  font-size: 24rpx;
  text-align: center;
  white-space: nowrap;
}

.rate-item.active {
  color: #c5eb59;
}

.rate-item:active {
  background: rgba(255, 255, 255, 0.1);
}

.video-cover {
  width: 100%;
  height: 422rpx;
  background: #000;
}

.video-lock-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 422rpx;
  background: rgba(0,0,0,0.6);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.lock-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
}

.lock-text {
  color: #fff;
  font-size: 28rpx;
  margin-bottom: 30rpx;
}

.unlock-btn {
  width: 240rpx;
  height: 80rpx;
  line-height: 50rpx;
  text-align: center;
  background:rgb(187, 209, 45);
  color: #fff;
  border-radius: 40rpx;
  font-size: 28rpx;
}

/* 客服二维码模态框 */
.qrcode-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.6);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.qrcode-container {
  width: 80%;
  max-width: 600rpx;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.qrcode-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  color: #333;
}

.qrcode-image {
  width: 400rpx;
  height: 400rpx;
  margin: 20rpx 0;
}

.qrcode-tips {
  font-size: 28rpx;
  color: #666;
  margin: 20rpx 0 30rpx;
}

.close-btn {
  width: 80%;
  height: 80rpx;
  line-height: 80rpx;
  background: #101010;
  color: #fff;
  font-size: 30rpx;
  border-radius: 40rpx;
  margin-top: 20rpx;
} 
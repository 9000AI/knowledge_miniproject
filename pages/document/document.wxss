/* pages/document/document.wxss */
.container {
  width: 100%;
  min-height: 100vh;
  background: #f5f5f5;
}

/* 自定义导航栏 */
.custom-nav {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  background: #fff;
  z-index: 101;
  padding-top: 40px; /* 状态栏高度 */
}

.nav-content {
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.nav-title {
  font-size: 34rpx;
  font-weight: 500;
  color: #333;
}

/* 选项卡容器 */
.tab-container {
  position: fixed;
  top: 84px; /* 导航栏高度(44px) + 状态栏高度(40px) */
  left: 0;
  width: 100%;
  background: #fff;
  z-index: 100;
}

/* 选项卡样式 */
.tab-bar {
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 88rpx;
  border-bottom: 1rpx solid #eee;
}

.tab-item {
  position: relative;
  flex: 1;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #666;
  transition: all 0.3s;
}

/* 激活状态的选项卡 */
.tab-item.active {
  color: #333;
  font-weight: bold;
}

/* 激活状态下的底部指示器 */
.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 80rpx;
  height: 6rpx;
  background: #c5eb59;
  border-radius: 3rpx;
}

/* 内容区域 */
.content-container {
  margin-top: 72rpx; /* 导航栏(84px) + 选项卡高度(44px) */
  padding: 0;  /* 移除内边距 */
  width: 100%;
}

.tab-content {
  min-height: calc(100vh - 72rpx);
  width: 100%;
}
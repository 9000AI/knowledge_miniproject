<!--pages/document/document.wxml-->
<view class="container">
  <!-- 自定义导航栏 -->
  <view class="custom-nav">
    <view class="nav-content">
      <view class="nav-title">课程</view>
    </view>
  </view>

  <!-- 顶部选项卡 -->
  <view class="tab-container">
    <view class="tab-bar">
      <view class="tab-item {{currentTab === 0 ? 'active' : ''}}" 
            bindtap="switchTab" 
            data-index="0">
        会员专区
      </view>
      <view class="tab-item {{currentTab === 1 ? 'active' : ''}}" 
            bindtap="switchTab" 
            data-index="1">
        付费课程
      </view>
    </view>
  </view>

  <!-- 内容区域 -->
  <view class="content-container">
    <!-- 会员专区内容 -->
    <view class="tab-content" hidden="{{currentTab !== 0}}">
      <prime-course></prime-course>
      <new-course></new-course>
    </view>
    
    <!-- 付费课程内容 -->
    <view class="tab-content" hidden="{{currentTab !== 1}}">
      <view class="course-content">
        <!-- 这里放付费课程的内容 -->
        付费课程内容
      </view>
    </view>
  </view>
</view>
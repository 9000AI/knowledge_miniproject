<view class="page-container">
    <!-- 顶部渐变背景 -->
    <view class="gradient-header"></view>
    
    <!-- 页面内容 -->
    <view class="content">
        <image 
            class="back-icon" 
            src="https://mini.9000aigc.com/assets/icons/back (1).png" 
            mode="aspectFit"
            bindtap="handleBack"
        />
        <view class="text-container">
            <view class="title">抖音运营</view>
            <view class="subtitle">专业的抖音运营方案</view>
        </view>

        <!-- 文章列表 -->
        <view class="article-list">
            <view 
                wx:for="{{articleList}}" 
                wx:key="index"
                class="article-item"
                bindtap="onArticleTap"
                data-index="{{index}}"
            >
                <view class="article-content">
                    <view class="article-title">{{item.title}}</view>
                    <view class="article-footer">
                        <view class="tags-container">
                            <view 
                                wx:for="{{item.tags}}" 
                                wx:key="tagIndex" 
                                wx:for-item="tag"
                                class="tag"
                            >{{tag}}</view>
                        </view>
                        <text class="article-time">{{item.time}}</text>
                    </view>
                </view>
            </view>
        </view>
    </view>
</view>

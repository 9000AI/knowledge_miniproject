

.top-image {
    height: 28vh; /* 设置为屏幕高度的三分之一 */
    width: 100%;
    overflow: hidden;
    position: relative; /* 添加相对定位 */
}

.top-image image {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

/* 文字容器样式 */
.text-container {
    position: absolute;
    top: 66%;
    left: 50%;
    transform: translate(-50%, -66%);
    text-align: center;
    z-index: 1;
}

/* 主标题样式 */
.top-text {
    color: #000000;
    font-size: 56rpx;
    font-weight: bold;
    white-space: nowrap;
    letter-spacing: 2px;
  font-family: 'XinYi', sans-serif;
    margin-bottom: 6rpx;
}

/* 副标题样式 */
.sub-text {
    color: #333333;
    font-size: 28rpx;
    white-space: nowrap;
    letter-spacing: 1px;
    margin-bottom: 20rpx;
}

.article-list {
    padding: 20rpx;
}

.section-title {
    font-size: 32rpx;
    font-weight: bold;
    color: #000000;
    padding: 0rpx 18rpx 2rpx;
    margin: -20rpx 0 20rpx 28rpx;
    border-left: 8rpx solid #c5eb59;
}

.article-container {
    display: grid;
    grid-template-columns: repeat(1, 1fr); /* 每行一个文章项 */
    gap: 20rpx;
}

.article-item {
    display: flex; /* 使用flex布局 */
    align-items: center; /* 垂直居中对齐 */
    border-radius: 16rpx;
    overflow: hidden;
    background: #fff; /* 背景颜色 */
    padding: 10rpx 16rpx; /* 内边距 */
}

.article-image {
    width: 180rpx; /* 设置封面图宽度 */
    height: 100rpx; /* 设置封面图高度 */
    border-radius: 8rpx; /* 圆角 */
    object-fit: cover; /* 保持比例 */
    margin-right: 10rpx; /* 右边距 */
}

.article-content {
    flex: 1; /* 让内容区域占据剩余空间 */
}

.article-title {
    font-size: 28rpx;
    font-weight: bold;
    color: #000000;
}

.article-time {
    font-size: 24rpx;
    color: #999;
    margin-top: 5rpx; /* 时间与标题之间的间距 */
}

.load-more {
    text-align: center;
    color: rgb(150, 158, 166);
    margin-top: 20rpx;
}

/* 搜索框容器样式 */
.search-container {
    margin-top: 30rpx;
    display: flex;
    align-items: center;
    width: 600rpx;
    height: 80rpx;
    background: #ffffff;
    border: none; /* 先清除所有边框 */
    border-top: 3rpx solid #000000 !important;
    border-bottom: 3rpx solid #000000 !important;
    border-left: 3rpx solid #000000 !important;
    border-right: 3rpx solid #000000 !important;
    border-radius: 40rpx;
    padding: 0 10rpx;
}

/* 搜索输入框 */
.search-input {
    flex: 1;
    height: 100%;
    font-size: 28rpx;
    color: #333333;
    text-align: left;
    padding-left: 20rpx;
}

/* 搜索按钮 */
.search-btn {
    width: 120rpx !important;
    min-width: unset !important;
    height: 60rpx;
    line-height: 60rpx;
    background: #000000;
    color: #c5dc2b;
    font-size: 28rpx;
    padding: 0;
    margin: 0;
    border-radius: 30rpx;
}

/* 占位符样式 */
.placeholder-style {
    color: #999999;
    font-size: 28rpx;
    text-align: left;
}
@font-face {
  font-family: 'XinYi';
  src: url('https://miniknowledge.9000aigc.com/assets/fonts/xinyi.ttf');
}
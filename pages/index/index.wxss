/**index.wxss**/
.page-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.top-image {
  height: 28vh;
  /* 设置为屏幕高度的三分之一 */
  width: 100%;
  overflow: hidden;
  position: relative;
  /* 添加相对定位 */
}

.top-image image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 文字容器样式 */
.text-container {
  position: absolute;
  top: 74%;
  left: 50%;
  transform: translate(-50%, -74%);
  text-align: center;
  z-index: 1;
}

/* 主标题样式 */
.top-text {
  color: #000000;
  font-size: 56rpx;
  font-family: 'XinYi', sans-serif;
  font-weight: bold;
  white-space: nowrap;
  letter-spacing: 2px;
  margin-bottom: 16rpx;
}

/* 副标题样式 */
.sub-text {
  color: #333333;
  font-size: 28rpx;
  white-space: nowrap;
  letter-spacing: 1px;
  margin-bottom: 20rpx;
}

.scrollarea {
  flex: 1;
  overflow-y: auto;
  margin-top: 10rpx;
  padding-bottom: 2rpx;
  /* 为底部留出空间，防止被 tabbar 遮挡 */
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
  width: 80%;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

.avatar-wrapper {
  padding: 0;
  width: 56px !important;
  border-radius: 8px;
  margin-top: 40px;
  margin-bottom: 40px;
}

.avatar {
  display: block;
  width: 56px;
  height: 56px;
}

.nickname-wrapper {
  display: flex;
  width: 100%;
  padding: 16px;
  box-sizing: border-box;
  border-top: .5px solid rgba(0, 0, 0, 0.1);
  border-bottom: .5px solid rgba(0, 0, 0, 0.1);
  color: black;
}

.nickname-label {
  width: 105px;
}

.nickname-input {
  flex: 1;
}

/* 添加字体声明 */
@font-face {
  font-family: 'XinYi';
  src: url('https://mini.9000aigc.com/assets/fonts/xinyi.ttf');
}

@font-face {
  font-family: 'Douyin';
  src: url('https://mini.9000aigc.com/assets/fonts/douyin.otf');
}

/* 搜索框容器 */
.search-container {
  margin-top: 30rpx;
  display: flex;
  align-items: center;
  width: 600rpx;
  height: 80rpx;
  background: #ffffff;
  /* 分开设置四个边的边框 */
  border: none;
  /* 先清除所有边框 */
  border-top: 3rpx solid #000000 !important;
  border-bottom: 3rpx solid #000000 !important;
  border-left: 3rpx solid #000000 !important;
  border-right: 3rpx solid #000000 !important;
  border-radius: 40rpx;
  padding: 0 10rpx;
}

/* 搜索输入框 */
.search-input {
  flex: 1;
  height: 100%;
  font-size: 28rpx;
  color: #333333;
  text-align: left;
  padding-left: 20rpx;
}

/* 搜索按钮 */
.search-btn {
  width: 120rpx !important;
  min-width: unset !important;
  height: 60rpx;
  line-height: 60rpx;
  background: #000000;
  color: #c5dc2b;
  font-size: 28rpx;
  padding: 0;
  margin: 0;
  border-radius: 30rpx;
}

/* 占位符样式 */
.placeholder-style {
  color: #999999;
  font-size: 28rpx;
  text-align: left;
}
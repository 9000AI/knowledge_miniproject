/* 返回图标样式 */
.back-icon {
    position: fixed;
    top: 100rpx;
    left: 10rpx;
    width: 48rpx;
    height: 48rpx;
    z-index: 100;
}

.container {
    padding: 40rpx 30rpx;
    background: #fff;
    width: 100%;
    box-sizing: border-box;
    display: block;
}

/* 文章头部样式 */
.article-header {
    margin-top: 120rpx;
    /* 增加顶部边距，为返回按钮留出空间 */
    margin-bottom: 10rpx;
    width: 100%;
}

.title {
    font-size: 40rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 20rpx;
    text-align: left;
}

.meta {
    display: flex;
    flex-direction: column;
    gap: 12rpx;
}

/* 作者和时间容器 */
.info-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
}

/* 作者样式 */
.author {
    font-size: 24rpx;
    color: #333;
    font-weight: 500;
}

/* 时间样式 */
.time {
    font-size: 24rpx;
    color: #999;
}

.tags {
    display: flex;
    gap: 8rpx;
    margin-top: 4rpx;
}

.tag {
    font-size: 22rpx;
    color: #666;
    background: #f5f5f5;
    padding: 4rpx 12rpx;
    border-radius: 4rpx;
}

/* 文章内容区域样式 */
.article-content {
    padding: 2rpx 4rpx;
    background: #fff;
    border-radius: 12rpx;
    margin-top: 2rpx;
}

/* 修改 markdown-body 为 html-content */
.html-content {
    font-size: 28rpx;
    line-height: 1.8;
    color: #333;
    width: 100%;
    display: block;
    overflow-x: hidden;
    /* 防止内容溢出 */
}

/* 适配深色模式 */
@media (prefers-color-scheme: dark) {
    .container {
        background: #1a1a1a;
    }

    .title {
        color: #fff;
    }

    .article-content {
        background: #1a1a1a;
    }

    .html-content {
        color: #e5e5e5;
    }

    .author {
        color: #e5e5e5;
    }
}
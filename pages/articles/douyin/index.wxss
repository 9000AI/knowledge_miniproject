/* 复用 update-item 的样式 */
@import "/pages/update-item/update-item.wxss";

/* 添加富文本内容的样式 */
.rich-content {
    font-size: 36rpx;
    line-height: 1.8;
    color: #333;
}
    
/* 图片样式 */
.rich-content image {
    max-width: 100%;
    height: auto;
    margin: 20rpx 0;
}
    
/* 标题样式 */
.rich-content h2 {
    font-size: 40rpx;
    font-weight: bold;
    margin: 30rpx 0 20rpx;
}
    
/* 段落样式 */
.rich-content p {
    margin: 16rpx 0;
    font-size: 36rpx;
    line-height: 1.6;  /* 适当调整行高，让大字体看起来更舒服 */
}

/* 加重文字样式 */
.rich-content strong {
    font-size: 36rpx;
    font-weight: bold;
    color: #222;
}

/* 加载中的样式 */
.loading-container {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 550rpx;
}

/* 文章内容包装器 */
.content-wrapper {
    position: relative;
    margin-bottom: 150rpx;  /* 增加底部空间 */
    padding-bottom: 100rpx;
}

/* 渐变遮罩 */
.content-mask {
    position: absolute;  /* 改为相对定位 */
    bottom: 0;
    left: 0;
    width: 100%;
    height: 550rpx;
    background: linear-gradient(to bottom, 
        rgba(255, 255, 255, 0) 0%,
        rgba(255, 255, 255, 0.8) 50%,
        rgba(255, 255, 255, 0.95) 100%
    );
    pointer-events: none;
    z-index: 98;
    opacity: 0;  /* 默认隐藏 */
    transition: opacity 0.3s ease;  /* 添加过渡效果 */
}

.content-mask.show {
    opacity: 1;  /* 显示时设置不透明 */
}

/* 解锁按钮 */
.unlock-button {
    position: absolute;
    left: 50%;
    bottom: -50rpx;  /* 调整位置 */
    transform: translateX(-50%) translateY(20rpx);  /* 默认位置稍微往下 */
    background: #000000;
    color: #c1d341;
    padding: 20rpx 50rpx;
    border-radius: 44rpx;
    font-size: 25rpx;
    font-weight: bold;
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
    z-index: 99;
    opacity: 0;  /* 默认隐藏 */
    transition: all 0.3s ease;  /* 添加过渡效果 */
}

.unlock-button.show {
    opacity: 1;
    transform: translateX(-50%) translateY(0);  /* 显示时恢复位置 */
}

/* 按钮点击效果 */
.unlock-button:active {
    transform: translateX(-50%) scale(0.98);
    box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.1);
}

/* 操作按钮组 */
.action-buttons {
    position: absolute;
    bottom: -170rpx;  /* 调整位置 */
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 80rpx;
    align-items: center;
    z-index: 99;
}

/* 单个操作按钮 */
.action-button {
    background: transparent;
    color: #000000;
    padding: 0;
    font-size: 24rpx;
    font-weight: normal;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 8rpx;
    width: auto !important;
    margin: 0;
    border: none;
}

/* 操作按钮图标 */
.action-button image {
    width: 44rpx;
    height: 44rpx;
    margin-bottom: 8rpx;  /* 图标和文字之间加点间距 */
}

/* 操作按钮文字 */
.action-button text {
    font-size: 24rpx;
    color: #666;
}

/* 文章标题 */
.article-header .title {
    font-size: 44rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 24rpx;
}

/* 作者和时间容器 */
.info-container {
    display: flex;
    align-items: center;
    gap: 20rpx;
    margin-bottom: 16rpx;
}

/* 作者样式 */
.info-container .author {
    font-size: 32rpx;
    color: #666;
    font-weight: 500;
}

/* 时间样式 */
.info-container .time {
    font-size: 32rpx;
    color: #999;
}

/* 标签容器 */
.tags {
    display: flex;
    flex-wrap: wrap;
    gap: 12rpx;
}

/* 标签样式 */
.tags .tag {
    font-size: 28rpx;
    color: #666;
    background: #f5f5f5;
    padding: 8rpx 20rpx;
    border-radius: 28rpx;
}
<view class="container">
  <!-- 返回按钮 -->
  <image 
    class="back-icon" 
    src="https://mini.9000aigc.com/assets/icons/back (1).png" 
    mode="aspectFit"
    bindtap="handleBack"
  />
  
  <!-- PDF 预览区域 -->
  <web-view wx:if="{{pdfUrl}}" src="{{pdfUrl}}" class="pdf-viewer"></web-view>
  
  <!-- 加载中提示 -->
  <view wx:if="{{loading}}" class="loading">
    <text>文档加载中...</text>
  </view>
  
  <!-- 错误提示 -->
  <view wx:if="{{error}}" class="error">
    <text>{{errorMsg}}</text>
  </view>
</view>

.container {
  width: 100%;
  height: 100vh;
  position: relative;
}

.pdf-viewer {
  width: 100%;
  height: 100%;
}

.loading, .error {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
}

.error {
  color: #ff4d4f;
}

/* 返回图标样式 */
.back-icon {
  position: fixed;
  top: 100rpx;
  left: 30rpx;
  width: 48rpx;
  height: 48rpx;
  z-index: 999;  /* 确保返回按钮在最上层 */
  padding: 20rpx;  /* 增加点击区域 */
}

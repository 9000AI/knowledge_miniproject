/* pages/user/user.wxss */
.user-container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 100rpx 30rpx 30rpx 30rpx;
}

.user-card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 30rpx;
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-right: 30rpx;
}

.info-right {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}

.member-tag {
  align-self: flex-start;
  font-size: 24rpx;
  color: #666;
  background: #f5f5f5;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
}

.member-tag.vip {
  color: #ff9c00;
  background: rgba(255, 156, 0, 0.1);
}

/* 菜单卡片样式 */
.menu-card {
  background: #ffffff;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.menu-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  position: relative;
}

.menu-item:not(:last-child)::after {
  content: '';
  position: absolute;
  left: 32rpx;
  right: 32rpx;
  bottom: 0;
  height: 1rpx;
  background: #f5f5f5;
}

.menu-item:active {
  background-color: #f9f9f9;
}

.menu-title {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.menu-icon {
  width: 40rpx;
  height: 40rpx;
}

.menu-title text {
  font-size: 30rpx;
  color: #333;
  font-weight: 400;
}

.arrow-icon {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.6;
}

.collection-count {
  font-size: 22rpx;
  color: #666;
  background: #f0f0f0;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  margin-left: 8rpx;
}

/* 退出登录按钮样式 */
.logout-btn {
  width: 90%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: #ffffff;
  color: #ff4d4f;
  font-size: 32rpx;
  border-radius: 44rpx;
  margin: 60rpx auto 0;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.logout-btn:active {
  opacity: 0.8;
}

.course-count {
  font-size: 24rpx;
  color: #fff;
  background: #4CAF50;
  padding: 2rpx 12rpx;
  border-radius: 20rpx;
  margin-left: 12rpx;
}

/* 未登录状态的样式 */
.login-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
}

.login-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
}

.login-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.login-btn {
  width: 80%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: #d8eb50;
  color: #333333 ;
  font-size: 32rpx;
  border-radius: 44rpx;
  box-shadow: 0 8rpx 16rpx rgba(58, 123, 255, 0.2);
}

.login-btn:active {
  opacity: 0.9;
  transform: scale(0.98);
}
/* pages/user/user.wxss */
.user-container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 100rpx 30rpx 30rpx 30rpx;
}

.user-card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 30rpx;
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-right: 30rpx;
}

.info-right {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}

.member-tag {
  align-self: flex-start;
  font-size: 24rpx;
  color: #666;
  background: #f5f5f5;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
}

.member-tag.vip {
  color: #ff9c00;
  background: rgba(255, 156, 0, 0.1);
}

/* 菜单卡片样式 */
.menu-card {
  background: #ffffff;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.menu-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.menu-title {
  display: flex;
  align-items: center;
}

.menu-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.menu-title text {
  font-size: 32rpx;
  color: #333;
}

.arrow-icon {
  width: 32rpx;
  height: 32rpx;
}

/* 退出登录按钮样式 */
.logout-btn {
  width: 90%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: #ffffff;
  color: #ff4d4f;
  font-size: 32rpx;
  border-radius: 44rpx;
  margin: 60rpx auto 0;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.logout-btn:active {
  opacity: 0.8;
}
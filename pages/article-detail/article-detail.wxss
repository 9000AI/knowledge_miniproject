.page-container {
  min-height: 100vh;
  background: #fff;
  position: relative;
}

/* 已移除顶部绿色渐变背景样式 */

/* 导航栏样式 */
.custom-nav {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 100;
  background: #ffffff; /* 导航栏固定为白色背景 */
}

.nav-content {
  position: relative;
  height: 44px;
  display: flex;
  align-items: center;
  padding: 0 24rpx;

}

.back-icon {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 16rpx;
  transition: opacity 0.3s ease;
}

.back-icon:active {
  opacity: 0.6;
}

.back-icon image {
  width: 48rpx;
  height: 48rpx;
}

.nav-title {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  font-size: 34rpx;
  font-weight: 500;
  color: #333;
  text-shadow: 0 1rpx 3rpx rgba(255, 255, 255, 0.8); /* 添加白色阴影增强可读性 */
}

/* 文章内容样式 */
.content {
  position: relative;
  z-index: 1;
  margin-top: 20rpx;
  padding: 20rpx 32rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
  background: #fff;
  padding-bottom: calc(100vh / 7 + 40rpx); /* 底部栏高度 + 额外间距 */
}

/* 富文本内容基础样式 */
.content rich-text {
  display: block;
  width: 100%;
}

/* mp-html组件样式 */
.content mp-html {
  display: block;
  width: 100%;
}

/* 修改富文本内容中图片的样式控制 */
.content image {
  max-width: 100% !important; /* 确保图片不会超出容器宽度 */
  height: auto !important; /* 保持图片比例 */
  display: block; /* 块级显示 */
  margin: 20rpx auto; /* 上下添加间距 */
}

/* 富文本段落样式 */
.content p {
  margin: 16rpx 0;
}

/* 文章详情内容区域 */
.article-detail-content {
  position: relative; /* 添加相对定位 */
  margin-top: 160rpx; /* 与渐变背景高度匹配 */
  padding: 40rpx 32rpx;
  min-height: calc(100vh - 160rpx);
  background: #fff; /* 确保内容背景是白色 */
  border-radius: 24rpx 24rpx 0 0; /* 顶部圆角，更美观 */
  z-index: 1; /* 确保在渐变背景之上 */
}

.article-header {
  margin-bottom: 40rpx;
}

.article-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.4;
}

.article-meta {
  margin-top: 20rpx;
  font-size: 24rpx;
  color: #999;
}

.article-meta text {
  margin-right: 20rpx;
}

.tags-container {
  margin-top: 20rpx;
}

.category-tags, .article-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-top: 12rpx;
}

.category-tag {
  background: #f0f9eb;
  color: #67c23a;
  padding: 4rpx 16rpx;
  border-radius: 4rpx;
  font-size: 24rpx;
}

.article-tag {
  background: #f4f4f5;
  color: #909399;
  padding: 4rpx 16rpx;
  border-radius: 4rpx;
  font-size: 24rpx;
}

.article-content {
  position: relative;
  line-height: 1.8;
  color: #333;
}

/* 遮罩层样式 */
.content-mask {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 70%;
  background: linear-gradient(to bottom, rgba(255,255,255,0), rgba(255,255,255,0.9), #fff);
  display: flex;
  align-items: center;
  justify-content: center;
}

.mask-content {
  text-align: center;
}

.lock-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
}

.mask-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 30rpx;
}

.unlock-btn {
  background: #67c23a;
  color: #fff;
  padding: 20rpx 60rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
}

/* 底部操作栏 */
.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 20rpx 32rpx;
  background: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.05);
  display: flex;
  justify-content: space-around;
  box-sizing: border-box;
}

.share-btn, .like-btn {
  display: flex;
  align-items: center;
  background: none;
  border: none;
  font-size: 28rpx;
  color: #666;
  line-height: 1;
  padding: 0;
}

.share-btn::after {
  display: none;
}

.share-btn image, .like-btn image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 8rpx;
}

/* 加载动画 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #67c23a;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 固定底部栏样式 */
.fixed-bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: calc(100vh / 12);
  background: #ffffff;
  box-shadow: 0 -2rpx 20rpx rgba(0, 0, 0, 0.05);
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 32rpx;
  box-sizing: border-box;
  z-index: 999;
}

.bottom-bar-left {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.logo-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}

.company-name {
  font-size: 32rpx;
  color: #333333;
  font-weight: 500;
}

.bottom-bar-right {
  display: flex;
  align-items: center;
  gap: 8rpx; /* 减小间距 */
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 60rpx; /* 固定宽度 */
}

.action-icon, .action-icons {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 4rpx;
}

.action-item text {
  font-size: 20rpx;
  color: #666666;
  line-height: 1;
}

.share-button {
  background: none;
  border: none;
  padding: 0;
  margin: 0;
  line-height: 1;
}

.share-button::after {
  display: none;
} 

wx-button:not([size=mini]) {
    margin-left: auto;
    margin-right: auto;
    width: 100rpx;
}

/* 登录按钮容器 */
.login-button-container {
  padding: 40rpx;
  text-align: center;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
}

/* 登录按钮样式 */
.login-button {
  display: inline-block;
  background: #101010;
  color: #c8e256;
  border-radius: 40rpx;
  padding: 24rpx 60rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  width: auto !important;
  min-width: 60% !important;
  line-height: 1.4 !important;
  white-space: nowrap;
}

.login-button:active {
  opacity: 0.9;
  transform: scale(0.98);
}

/* 客服二维码模态框 */
.qrcode-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.6);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.qrcode-container {
  width: 80%;
  max-width: 600rpx;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.qrcode-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  color: #333;
}

.qrcode-image {
  width: 400rpx;
  height: 400rpx;
  margin: 20rpx 0;
}

.qrcode-tips {
  font-size: 28rpx;
  color: #666;
  margin: 20rpx 0 30rpx;
}

.close-btn {
  width: 80%;
  height: 80rpx;
  line-height: 80rpx;
  background: #101010;
  color: #fff;
  font-size: 30rpx;
  border-radius: 40rpx;
  margin-top: 20rpx;
}
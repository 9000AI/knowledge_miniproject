.promotion-container {
  width: 100vw;
  height: 100vh;
  position: relative;
  background: #fff;
}

.bg-image {
  position: absolute;
  width: 100%;
  height: 33.33vh;
  top: 0;
  left: 0;
  z-index: 0;
}

.back-btn {
  position: absolute;
  left: 32rpx;
  top: 128rpx;
  width: 48rpx;
  height: 48rpx;
  z-index: 10;
}

.back-btn image {
  width: 100%;
  height: 100%;
}

.content {
  position: relative;
  z-index: 1;
  padding-top: 240rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.input-box {
  width: 80%;
  margin: 0 auto;
  border: 1rpx solid rgb(208, 208, 208);
  border-radius: 22rpx;
  padding: 4rpx 32rpx;
}

.input {
  height: 88rpx;
  width: 100%;
  font-size: 28rpx;
  color: #333;
}

.placeholder {
  color: #999;
}

.promote-btn {
  margin-top: 60rpx;
  height: 88rpx;
  line-height: 88rpx;
  background: #000000;
  color: #c5dc2b;
  font-size: 32rpx;
  border-radius: 16rpx;
  font-weight: 500;
  box-shadow: 0 8rpx 16rpx rgba(59, 125, 255, 0.2);
  padding: 0;
  width: 90% !important;
  min-width: unset;
}

/* 禁用状态的样式 */
.promote-btn.disabled {
  background: #cccccc;
  color: #ffffff;
  box-shadow: none;
  cursor: not-allowed;
}

.promote-btn::after {
  border: none;
}

.promote-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 8rpx rgba(59, 125, 255, 0.2);
}

.tip-text {
  margin-top: 24rpx;
  font-size: 24rpx;
  color: #666666;
  text-align: center;
  padding: 0 40rpx;
  line-height: 1.5;
} 
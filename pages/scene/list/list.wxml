<view class="page-container">
    <!-- 顶部渐变背景 -->
    <view class="gradient-header"></view>
    
    <!-- 页面内容 -->
    <view class="content">
        <image 
            class="back-icon" 
            src="https://mini.9000aigc.com/assets/icons/back (1).png" 
            mode="aspectFit"
            bindtap="handleBack"
        />
        <view class="text-container">
            <view class="title">{{pageConfig.title}}</view>
            <view class="subtitle">{{pageConfig.subtitle}}</view>
        </view>

        <!-- 使用 wx:for 循环渲染sections -->
        <block wx:for="{{pageConfig.sections}}" wx:key="title">
            <!-- 带边框的标题 -->
            <view class="section-title">{{item.title}}</view>

            <!-- 文章列表 -->
            <view class="article-list">
                <view 
                    wx:for="{{item.articles}}" 
                    wx:for-item="article"
                    wx:key="index"
                    class="article-item"
                    bindtap="onArticleTap"
                    data-index="{{index}}"
                >
                    <view class="article-content">
                        <view class="article-title">{{article.title}}</view>
                        <view class="article-footer">
                            <view class="tags-container">
                                <view 
                                    wx:for="{{article.tags}}" 
                                    wx:for-item="tag"
                                    wx:key="tagIndex" 
                                    class="tag"
                                >{{tag}}</view>
                            </view>
                            <text class="article-time">{{article.time}}</text>
                        </view>
                    </view>
                </view>
            </view>
        </block>
    </view>
</view>

.custom-nav {
  padding: 40px 15px 10px;
  background: #fff;
}

.nav-title {
  font-size: 18px;
  font-weight: bold;
  text-align: center;
}

.search-box {
  padding: 10px 15px;
  background: #fff;
}

.search-box input {
  background: #f5f5f5;
  padding: 8px 15px;
  border-radius: 20px;
  font-size: 14px;
}

.container {
  height: calc(100vh - 120px);
  background: #f5f5f5;
}

.project-list {
  padding: 15px;
}

.project-item {
  background: #fff;
  border-radius: 8px;
  margin-bottom: 15px;
  overflow: hidden;
  box-shadow: 0 2px 8px rgba(0,0,0,0.05);
}

.project-cover {
  width: 100%;
  height: 160px;
}

.project-info {
  padding: 12px;
}

.project-title {
  font-size: 16px;
  font-weight: bold;
  margin-bottom: 8px;
}

.project-desc {
  font-size: 14px;
  color: #666;
  margin-bottom: 8px;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.project-time {
  font-size: 12px;
  color: #999;
}

.loading-tips, .empty-tips {
  text-align: center;
  padding: 15px;
  color: #999;
  font-size: 14px;
} 
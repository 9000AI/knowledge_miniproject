.custom-nav {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  background: #fff;
  z-index: 101;
  padding-top: 40px; /* 状态栏高度 */
}

.nav-title {
  height: 44px;
  line-height: 44px;
  font-size: 34rpx;
  font-weight: 500;
  text-align: center;
  color: #333;
}

.search-box {
  position: fixed;
  top: 84px; /* 导航栏高度(44px) + 状态栏高度(40px) */
  left: 0;
  width: 100%;
  padding: 10px 15px;
  background: #fff;
  z-index: 100;
  box-sizing: border-box;
}

.search-box input {
  background: #f5f5f5;
  padding: 8px 15px;
  border-radius: 20px;
  font-size: 14px;
}

.containers {
  position: fixed;
  top: 136px;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #f5f5f5;

}

.project-list {
  padding: 15px;
}

.project-item {
  background: #fff;
  border-radius: 8px;
  margin-bottom: 15px;
  overflow: hidden;
  box-shadow: 0 2px 8px rgba(0,0,0,0.05);
}

.project-cover {
  width: 100%;
  height: 160px;
}

.project-info {
  padding: 12px;
}

.project-title {
  font-size: 16px;
  font-weight: bold;
  margin-bottom: 8px;
}

.project-desc {
  font-size: 14px;
  color: #666;
  margin-bottom: 8px;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.project-time {
  font-size: 12px;
  color: #999;
}

.loading-tips, .empty-tips {
  text-align: center;
  padding: 15px;
  color: #999;
  font-size: 14px;
} 
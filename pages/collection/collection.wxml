<view class="collections-container">
  <!-- 自定义导航栏 -->
  <view class="custom-nav" style="padding-top: {{statusBarHeight}}px;">
    <view class="nav-content">
      <view class="back-icon" bindtap="handleBack">
        <image src="https://miniknowledge.9000aigc.com/assets/icons/back (1).png" mode="aspectFit"></image>
      </view>
      <view class="nav-title">我的收藏</view>
    </view>
  </view>

  <!-- 文章列表 -->
  <view class="article-list" style="padding-top: {{statusBarHeight + navBarHeight}}px;">
    <!-- 文章卡片 -->
    <view class="article-card" wx:for="{{articles}}" wx:key="id" bindtap="goToDetail" data-id="{{item.id}}">
      <view class="article-info">
        <view class="article-title">{{item.title}}</view>
        <view class="article-meta">
          <text class="date">{{item.createTime}}</text>
          <view class="member-tag" wx:if="{{item.isMemberOnly}}">会员专享</view>
        </view>
      </view>
      <image wx:if="{{item.coverImage}}" class="article-cover" src="{{item.coverImage}}" mode="aspectFill"></image>
    </view>

    <!-- 加载状态 -->
    <view class="loading-status">
      <view wx:if="{{loading}}" class="loading">加载中...</view>
      <view wx:elif="{{!hasMore && articles.length > 0}}" class="no-more">没有更多了</view>
      <view wx:elif="{{!loading && articles.length === 0}}" class="empty">
        <image src="https://miniknowledge.9000aigc.com/assets/icons/empty.png" mode="aspectFit"></image>
        <text>暂无收藏文章</text>
      </view>
    </view>
  </view>
</view> 
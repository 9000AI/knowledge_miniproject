.page-container {
  min-height: 100vh;
  background: #fff;
  position: relative;
}

.gradient-header {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 500rpx;
 
  z-index: 0;
}

/* 搜索区域样式 */
.search-area {
  position: relative;
  z-index: 2;
  padding: 0 32rpx;
  display: flex;
  align-items: center;
  padding-right: 180rpx; /* 为右上角按钮预留空间 */
}

.back-icon {
  width: 55rpx;
  height: 55rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 6rpx;
  margin-right: 10rpx;
}

.back-icon image {
  width: 55rpx;
  height: 55rpx;
}

/* 搜索框容器 */
.search-container {
  flex: 1;
  display: flex;
  align-items: center;
  height: 80rpx;
  background: #ffffff;
  border: none;
  border-top: 3rpx solid #000000 !important;
  border-bottom: 3rpx solid #000000 !important;
  border-left: 3rpx solid #000000 !important;
  border-right: 3rpx solid #000000 !important;
  border-radius: 40rpx;
  padding: 0 10rpx;
  margin: 0;
  max-width: calc(100% - 100rpx); /* 限制最大宽度 */
}

/* 搜索输入框 */
.search-input {
  flex: 1;
  height: 100%;
  font-size: 28rpx;
  color: #333333;
  text-align: left;
  padding-left: 20rpx;
}

/* 搜索按钮 */
.search-btn {
  width: 120rpx !important;
  min-width: unset !important;
  height: 60rpx;
  line-height: 60rpx;
  background: #000000;
  color: #c5dc2b;
  font-size: 28rpx;
  padding: 0;
  margin: 0;
  border-radius: 30rpx;
}

/* 占位符样式 */
.placeholder-style {
  color: #999999;
  font-size: 28rpx;
  text-align: left;
}

/* 搜索结果列表样式 */
.search-results {
  margin-top: 10rpx;
  padding: 0 20rpx;
}

.no-result {
  text-align: center;
  color: #999;
  margin-top: 100rpx;
  font-size: 28rpx;
}

/* 筛选区域样式 */
.filter-area {
  position: relative;
  z-index: 3;
  margin-top: 20rpx;
}

.filter-scroll {
  white-space: nowrap;
  padding: 0 32rpx;
}

.filter-tags {
  display: inline-flex;
  padding: 10rpx 0;
}

.filter-tag {
  display: inline-flex;
  align-items: center;
  padding: 12rpx 32rpx;
  margin-right: 24rpx;
  font-size: 28rpx;
  color: #333;
  background: #f8f8f8;
  border-radius: 26rpx;
  transition: all 0.3s;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  max-width: 200rpx; /* 防止文字过长 */
}

.filter-tag.active {
 color: #73B100;
  background: rgba(221,255,129,0.4);
}

/* 增加选中值的特殊样式 */
.filter-tag.has-selected-value {
  color: #73B100;
  background: rgba(221,255,129,0.4);
  font-weight: 500;
}

.arrow-icon {
  width: 24rpx;
  height: 24rpx;
  margin-left: 8rpx;
  transition: transform 0.3s;
  flex-shrink: 0; /* 防止图标被压缩 */
}

.filter-tag.active .arrow-icon {
  transform: rotate(180deg);
}

/* 下拉菜单样式 */
.dropdown-menu {
  position: absolute;
  top: 100%;
  left: 0;
  width: 100%;
  background: #fff;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  z-index: 4;
}

.dropdown-content {
  padding: 20rpx 32rpx;
}

.dropdown-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
  padding: 10rpx;
}

.dropdown-item {
  text-align: center;
  padding: 16rpx;
  font-size: 26rpx;
  color: #333;
  background: #f5f5f5;
  border-radius: 8rpx;
}

.dropdown-item.selected {
 color: #73B100;
background: rgba(221,255,129,0.4);
}

/* 文章列表样式 */
.article-list {
  padding: 10rpx;
}

.article-item {
  display: flex;
  align-items: center;
  padding: 16rpx 32rpx 16rpx 16rpx;
  margin-bottom: 16rpx;
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.03);
}

.article-image {
  width: 160rpx;
  height: 100rpx;
  border-radius: 6rpx;
  margin-right: 16rpx;
}

.article-content {
  flex: 1;
}

.article-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  line-height: 1.3;
}

.article-time {
  font-size: 24rpx;
  color: #999;
}

.load-more {
  text-align: center;
  padding: 16rpx;
  color: #666;
  font-size: 26rpx;
} 
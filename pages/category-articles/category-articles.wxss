.page-container {
  min-height: 100vh;
  position: relative;
  background-color: #f8f8f8;
  display: flex;
  flex-direction: column;
  overflow-x: hidden; /* 防止内容溢出 */
}

/* 自定义导航栏 + 搜索框 (固定) */
.custom-nav {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  background-color: #ffffff;
  z-index: 100;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
}

.nav-content {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center; /* 让标题居中 */
  padding: 0 24rpx;
}

.back-icon {
  position: absolute;
  left: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 16rpx;
  transition: opacity 0.3s ease;
}

.back-icon:active {
  opacity: 0.6;
}

.back-icon image {
  width: 48rpx;
  height: 48rpx;
}

.nav-title {
  font-size: 34rpx;
  font-weight: 500;
  color: #333;
}

.category-button {
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 16rpx 20rpx;
  background-color: #f5f5f5;
  border-radius: 36rpx;
  transition: background-color 0.2s ease;
}

.category-button:active {
  background-color: #e0e0e0;
}

.category-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

/* 搜索框容器 */
.search-container {
  padding: 10rpx 32rpx;
}

/* 搜索框外层 */
.search-box {
  display: flex;
  align-items: center;
  background: #F5F5F5;
  border-radius: 36rpx;
  padding: 16rpx 24rpx;
}

/* 搜索图标 */
.search-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 16rpx;
}

/* 搜索输入框 */
.search-input {
  flex: 1;
  height: 36rpx;
  font-size: 28rpx;
  color: #333333;
  background: transparent;
}

/* 占位符样式 */
.placeholder-style {
  color: #999999;
  font-size: 28rpx;
}

/* 主要内容区域 */
.main-content {
  flex: 1;
  overflow: hidden;
  background-color: #fff;
}

/* 右侧面板 */
.right-panel {
  width: 100%; /* 右侧面板占据全部宽度 */
  height: 100%;
  background-color: #fff;
  box-sizing: border-box;
}

.right-scroll {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}

/* 标签容器 */
.tags-container {
  padding: 20rpx 16rpx 0;
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

/* 标签项 */
.tag-item {
  display: inline-block;
  padding: 6rpx 16rpx;
  font-size: 24rpx;
  color: #555;
  border: 1rpx solid #ccc;
  border-radius: 20rpx;
  background-color: transparent;
  transition: all 0.2s ease;
}

.tag-item.active {
  background-color: #fff;
  color: #c4d557;
  border-color: #c4d557;
  font-weight: bold;
}

.article-container {
  padding: 20rpx 16rpx;
  box-sizing: border-box;
}

.article-item {
  display: flex;
  align-items: flex-start;
  border-radius: 16rpx;
  overflow: hidden;
  background: #fff;
  padding: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
  margin-bottom: 20rpx;
  min-height: 160rpx;
}

.article-item:last-child {
  margin-bottom: 0;
}

.article-item:active {
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  transform: translateY(2rpx);
}

.article-image {
  width: 200rpx;
  height: 140rpx;
  border-radius: 12rpx;
  object-fit: cover;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.article-content {
  flex: 1;
  min-width: 0;
}

.article-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #000000;
  line-height: 1.4;
  margin-bottom: 12rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.article-time {
  font-size: 24rpx;
  color: #999;
  margin-top: 5rpx;
}

/* 文章标签样式 */
.article-tags {
  display: flex;
  flex-wrap: nowrap;
  gap: 8rpx;
  margin: 8rpx 0;
  overflow: hidden;
}

.article-tag {
  display: inline-block;
  font-size: 20rpx;
  color: #333;
  background-color: rgba(192, 212, 73, 0.15);
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  white-space: nowrap;
  flex-shrink: 0;
  border: 1px solid rgba(192, 212, 73, 0.3);
}

.load-more, .empty-tip {
  text-align: center;
  color: #999;
  padding: 30rpx 0;
  font-size: 26rpx;
}

/* 侧边栏样式 */
.sidebar {
  position: fixed;
  top: 0;
  right: 0;
  width: 70%;
  max-width: 500rpx;
  height: 100%;
  background-color: #f5f5f5;
  z-index: 1001;
  transform: translateX(100%);
  transition: transform 0.3s ease-in-out;
  box-shadow: -2rpx 0 10rpx rgba(0,0,0,0.1);
}

.sidebar.show {
  transform: translateX(0);
}

.left-scroll {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding-top: 80rpx;
}

.left-item {
  padding: 24rpx 16rpx;
  font-size: 28rpx;
  color: #333;
  text-align: center;
  border-bottom: 1rpx solid #eee;
  transition: background-color 0.2s ease, color 0.2s ease;
}

.left-item:last-child {
  border-bottom: none;
}

.left-item.active {
  background-color: #c0d449;
  color: #fff;
  font-weight: bold;
}

/* 遮罩层样式 */
.sidebar-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.3s ease-in-out;
}

.sidebar-overlay.show {
  opacity: 1;
  pointer-events: auto;
}

/* 悬浮分类按钮 */
.floating-category-btn {
  position: fixed;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  background-color: #c0d449;
  padding: 24rpx 18rpx 24rpx 24rpx;
  border-radius: 50rpx 0 0 50rpx;
  box-shadow: -2rpx 0 8rpx rgba(0, 0, 0, 0.1);
  z-index: 999;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
}

.floating-category-btn:active {
  padding-right: 26rpx;
  background-color: #b0c439;
}

.floating-category-btn image {
  width: 56rpx;
  height: 56rpx;
}
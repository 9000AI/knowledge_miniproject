.category-articles {
  padding: 20rpx;
}

.header {
  margin-bottom: 10rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  padding: 6rpx 18rpx 2rpx;
  margin: 30rpx 0 20rpx 28rpx;
  border-left: 8rpx solid #c5eb59;
}

.article-container {
  display: grid;
  grid-template-columns: repeat(1, 1fr);
  gap: 20rpx;
  padding: 0 16rpx;
}

.article-item {
  display: flex;
  align-items: center;
  border-radius: 16rpx;
  overflow: hidden;
  background: #fff;
  padding: 10rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.article-item:active {
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  transform: translateY(2rpx);
}

.article-image {
  width: 180rpx;
  height: 100rpx;
  border-radius: 8rpx;
  object-fit: cover;
  margin-right: 10rpx;
}

.article-content {
  flex: 1;
}

.article-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #000000;
}

.article-time {
  font-size: 24rpx;
  color: #999;
  margin-top: 5rpx;
}

.load-more {
  text-align: center;
  color: rgb(150, 158, 166);
  margin-top: 20rpx;
  padding: 20rpx 0;
}

/* 添加页面容器样式 */
.page-container {
  min-height: 100vh;
  position: relative;
}

/* 添加渐变背景样式 */
.gradient-header {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 33.33vh;
  background: linear-gradient(to bottom, rgb(212, 244, 120), rgb(230, 245, 157), rgb(255, 255, 255));
  z-index: 0;
}

/* 自定义导航栏 */
.custom-nav {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 100;
}

.nav-content {
  position: relative;
  height: 44px;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
}

.back-icon {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 16rpx;
  transition: opacity 0.3s ease;
}

.back-icon:active {
  opacity: 0.6;
}

.back-icon image {
  width: 48rpx;
  height: 48rpx;
}

.nav-title {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  font-size: 34rpx;
  font-weight: 500;
  color: #333;
}

/* 修改内容区域样式 */
.content {
  position: relative;
  z-index: 1;
  padding: 0 20rpx;
  box-sizing: border-box;
}

/* 搜索框容器 */
.search-container {
  padding: 10rpx 32rpx;
}

/* 搜索框外层 */
.search-box {
  display: flex;
  align-items: center;
  background: #F5F5F5;
  border-radius: 36rpx;
  padding: 16rpx 24rpx;
}

/* 搜索图标 */
.search-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 16rpx;
}

/* 搜索输入框 */
.search-input {
  flex: 1;
  height: 36rpx;
  font-size: 28rpx;
  color: #333333;
  background: transparent;
}

/* 占位符样式 */
.placeholder-style {
  color: #999999;
  font-size: 28rpx;
} 
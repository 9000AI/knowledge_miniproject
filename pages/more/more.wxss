.container {
  width: 100%;
  min-height: 100vh;
  background: #F8F8F8;
}

/* 自定义导航栏 */
.custom-nav {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  background: #fff;
  z-index: 101;
}

.nav-content {
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.nav-title {
  font-size: 34rpx;
  font-weight: 500;
  color: #333;
}

/* 内容区域 */
.content-container {
  width: 100%;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
}

.card-list {
  height: calc(100vh - 160rpx);
}

.card-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  padding: 0;
}

.card-item {
  background: #FFFFFF;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.card-image {
  width: 100%;
  height: 180rpx;
  background-color: #f5f5f5;
}

.card-title {
  font-size: 28rpx;
  color: #333333;
  padding: 12rpx;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  text-align: center;
} 
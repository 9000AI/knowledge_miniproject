/* pages/member-card-list/member-card-list.wxss */
.page-container {
  min-height: 100vh;
  background: #f8f8f8;
  position: relative;
}

/* 导航栏样式 */
.custom-nav {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 100;
  background: #fff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.nav-content {
  position: relative;
  height: 44px;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  margin-bottom: 20rpx;

}

.back-icon {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 16rpx;
  transition: opacity 0.3s ease;
}

.back-icon:active {
  opacity: 0.6;
}

.back-icon image {
  width: 48rpx;
  height: 48rpx;
}

.nav-title {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  font-size: 34rpx;
  font-weight: 500;
  color: #333;
}

/* 搜索框样式 */
.search-container {
  display: flex;
  align-items: center;
  height: 80rpx;
  background: #fff;
  border: 1rpx solid #eee;
  border-radius: 40rpx;
  padding: 0 30rpx;
  margin: 0 auto;
  width: 85%;
  position: fixed;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  z-index: 90;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.search-input {
  flex: 1;
  height: 100%;
  font-size: 28rpx;
  color: #333333;
  text-align: left;
}

.placeholder-style {
  color: #999;
  font-size: 28rpx;
}

/* 滚动区域 */
.scrollarea {
  height: calc(100vh - 80rpx);
  width: 100%;
  position: relative;
  z-index: 2;
  box-sizing: border-box;
}

/* 会员列表 */
.member-list {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  width: 100%;
  box-sizing: border-box;
}

/* 会员卡片样式 - 参考fire页面 */
.member-card {
  margin-bottom: 20rpx;
  padding: 24rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  width: 100%;
  box-sizing: border-box;
}

/* 会员头部区域 */
.member-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.member-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  border: 2rpx solid #f0f0f0;
}

.member-info {
  flex: 1;
  overflow: hidden;
}

.name-label-container {
  display: flex;
  flex-direction: column;
  margin-bottom: 8rpx;
}

.member-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-right: 16rpx;
}

.member-labels {
  display: flex;
  flex-wrap: wrap;
  margin-top: 8rpx;
}

.label-item {
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  margin-right: 12rpx;
  margin-bottom: 8rpx;
  color: #fff;
  background-color: #4CAF50;
}

.label-type-1 {
  background-color: #4CAF50; /* 流量主 */
}

.label-type-2 {
  background-color: #2196F3; /* 品牌方 */
}

.label-type-3 {
  background-color: #FF9800; /* 供应链 */
}

.label-type-4 {
  background-color: #9C27B0; /* 服务商 */
}

.label-type-5 {
  background-color: #F44336; /* 投资人 */
}

.member-position {
  font-size: 24rpx;
  color: #666;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 会员位置信息 */
.member-location {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
  font-size: 24rpx;
  color: #666;
}

.member-location .icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 8rpx;
  flex-shrink: 0;
}

/* 会员简介 */
.member-about {
  display: flex;
  margin-bottom: 16rpx;
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}

.member-about .icons {
  width: 28rpx;
  height: 28rpx;
  margin-right: 8rpx;
  margin-top: 4rpx;
  flex-shrink: 0;
}

/* 会员详情部分 */
.member-section {
  margin-top: 16rpx;
  font-size: 24rpx;
}

.section-title {
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.section-content {
  color: #666;
  line-height: 1.5;
}

/* 加载状态 */
.loading-status {
  padding: 20rpx 0;
  text-align: center;
  font-size: 24rpx;
  color: #999;
}

.loading, .no-more, .empty-list {
  padding: 30rpx 0;
}

.empty-list {
  padding: 100rpx 0;
  color: #999;
} 